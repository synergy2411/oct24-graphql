generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  age      Int
  email    String @unique
  password String
  role     Role
  Post     Post[]

  @@index([name, age])
}

model Post {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String
  published Boolean
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String  @db.ObjectId
}

enum Role {
  ADMIN
  MANAGER
  DEVELOPER
}
